<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6 question">
    <div class="question">
      <fieldset>
        <legend>QUESTION</legend>
        <p>
          <%= @question.body %>
        </p>
      </fieldset>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>

<div class="row">
  <div class="col-md-2"></div>

  <div class="col-md-3">

    <%= link_to check_path(id: @question.id, answer: 'a'), method: :post, remote: true, class: "answer" do %>
      <div class="card" id="a">
        <div class="row no-gutters">
          <div class="col-md-2">
            <strong>A</strong>
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.a %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to check_path(id: @question.id, answer: 'c'), method: :post, remote: true, class: "answer" do %>
      <div class="card" id="c">
        <div class="row no-gutters">
          <div class="col-md-2">
            <strong>C</strong>
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.c %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-md-2"></div>

  <div class="col-md-3">

    <%= link_to check_path(id: @question.id, answer: 'b'), method: :post, remote: true, class: "answer" do %>
      <div class="card" id="b">
        <div class="row no-gutters">
          <div class="col-md-2">
            <strong>B</strong>
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.b %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to check_path(id: @question.id, answer: 'd'), method: :post, remote: true, class: "answer" do %>
      <div class="card" id="d">
        <div class="row no-gutters">
          <div class="col-md-2">
            <strong>D</strong>
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.d %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-md-2"></div>

</div>

<div class="row progressbar">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6">
        <div class="progress">
          <div id="progressbar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="20" style="width: 0"></div>
        </div>
      </div>
      <div class="col-md-3">
      </div>
    </div>
  </div>
</div>

<p id="duration"></p>


<script>
    let i = 0;

    const timer = setInterval(function () {
        i += 0.5;
        if (i <= 100) {
            document.getElementById("progressbar").style.width = i + 1 + "%";
        } else {
            clearTimeout(timer);
        }

    }, 100);
</script>
