<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6 question">
    <div class="question">
      <fieldset>
        <legend>QUESTION</legend>
        <p>
          <%= @question.body %>
        </p>
      </fieldset>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>

<div class="row">
  <div class="col-md-2"></div>

  <div class="col-md-3">

    <%= link_to check_path(id: @question.id, answer: 'a'), method: :post, remote: true, class: "answer" do %>
      <div class="card" id="a">
        <div class="row no-gutters">
          <div class="col-md-2">
            <strong>A</strong>
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.a %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to check_path(id: @question.id, answer: 'c'), method: :post, remote: true, class: "answer" do %>
