          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.c %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-md-2"></div>

  <div class="col-md-3">

    <%= link_to check_path(id: @question.id, answer: 'b'), method: :post, remote: true, class: "answer" do %>
      <div class="card"  id="b">
        <div class="row no-gutters">
          <div class="col-md-2">
            <strong>B</strong>
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.b %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to check_path(id: @question.id, answer: 'd'), method: :post, remote: true, class: "answer" do %>
      <div class="card"  id="d">
        <div class="row no-gutters">
          <div class="col-md-2">
            <strong>D</strong>
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <p class="card-text">
                <%= @question.d %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-md-2"></div>
</div>
