<!DOCTYPE html>
<html>
<head>
  <title>Blblquiz</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <header>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link " + (current_page?(root_path) ? "active" : "") %>
          </li>
          <li class="nav-item">
            <%= link_to "Players", players_path, class: "nav-link " + (current_page?(players_path) ? "active" : "") %>
          </li>
          <li class="nav-item">
            <%= link_to "Questions", questions_path, class: "nav-link " + (current_page?(questions_path) ? "active" : "") %>
          </li>
          <% if current %>
            <li class="nav-item dropdown ml-md-auto">
              <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">
                <%= current.name %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" href="#">Vous avez <%= current.points %> points</a>
                <div class="dropdown-divider"></div>
                <%= link_to "Quitter", {:controller => :players, :action => 'logout'}, method: 'post', class: "dropdown-item" %>
              </div>
            </li>
          <% end %>
        </ul>
      </header>

      <% if notice %>
        <div class="alert alert-dismissable alert-info">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <%= notice %>
        </div>
      <% end %>

      <%= yield %>

    </div>
  </div>
</div>


<footer>
  made with ♥ for BlblTV by Théo Liberman
</footer>

</body>
</html>
